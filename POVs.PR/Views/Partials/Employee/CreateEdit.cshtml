@model EmployeeVM

@inject ICountryRep country
@inject ICityRep city
@inject IDistrictRep district

@section BootstrapSelectStyles {
    bootstrap-select
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet">
}
<div asp-validation-summary="All" class="text-danger font-bold"></div>

<label for="Name">Name</label>
<input type="text" asp-for="Name" class="form-control" />
<span asp-validation-for="Name" class="text-danger"></span>
<br />

<label for="Email">Email</label>
<input type="text" asp-for="Email" class="form-control" />
<span asp-validation-for="Email" class="text-danger"></span>
<br />

<label for="Address">Address</label>
<input type="text" asp-for="Address" class="form-control" />
<span asp-validation-for="Address" class="text-danger"></span>
<br />

<label for="Salary">Salary</label>
<input type="number" asp-for="Salary" class="form-control" />
<span asp-validation-for="Salary" class="text-danger"></span>
<br />

<label for="Salary">Hire Date</label>
<input type="date" asp-for="HireDate" class="form-control" />
<span asp-validation-for="HireDate" class="text-danger"></span>
<br />

<label for="Notes">Notes</label>
<textarea rows="4" type="text" asp-for="Notes" class="form-control"></textarea>
<span asp-validation-for="Notes" class="text-danger"></span>
<br />


<label for="DepartmentId">Department</label>
<select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.DepartmentsList">
    <option>Choose Department</option>
</select>
<span asp-validation-for="DepartmentId" class="text-danger"></span>
<br />

<br />
<label for="CountryList">Country</label>
<select id="CountryList">
    <option>Choose Country</option>
    @foreach (var item in await country.GetAsync())
    {
        <option value="@item.Id">@item.Name</option>
    }
</select>

<br />
<br />
<label for="CityList">City</label>
<select id="CityList">
    <option>Choose City</option>
    @foreach (var item in await city.GetAsync())
        {
            <option value="@item.Id">@item.Name</option>
        }
</select>

<br />
<br />
<label for="DistrictId">District</label>
<select id="DistrictId" asp-for="DistrictId">
    <option>Choose District</option>
    @foreach (var item in await district.GetAsync())
        {
            <option value="@item.Id">@item.Name</option>
        }
</select>
<span asp-validation-for="DistrictId" class="text-danger"></span>
<br />
<br />

<div class="demo-checkbox">
    <input type="checkbox" asp-for="IsActive" checked />
    <label asp-for="IsActive">Active</label>
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>


<center>
    <input type="submit" class="btn btn-primary text-center" value="Save" />
    <input type="reset" class="btn btn-danger text-center" value="Cancel" />
</center>


@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@section BootstrapSelectScripts {

    @*Select Plugin Js*@
    <script src="~/plugins/bootstrap-select/js/bootstrap-select.js"></script>
    <script>
        $(document).ready(function () {
            //---------------------const------------------------
            const countryList = "#CountryList";
            const cityList = "#CityList";
            const districtId = "#DistrictId";
            //---------------------country change------------------------
            $(countryList).change(() => {
                $(cityList).empty();
                $(cityList).append("<option> Choose City </option>");

                var countryId = $(countryList +" option:selected").val;
                console.log("countryId :" + countryId);
                $.ajax({
                    type: "POST",
                    url: "/Employee/GetCitiesByCountryId",
                    data: { CountryId: countryId },
                    success: (data) => {
                        console.log("data :" + data);
                        $.each(data, (index, element) => {
                            $(cityList).append("<option value='" + element.Id + "'>" + element.Name + "</option>");
                        });
                    },
                    error: function (error) {
                        console.log("error :" + error);
                        alert(error);
                    }
                });
            });
            //---------------------city change-------------------------
            $("#CityList").change(() => {
                $(districtId).empty();
                $(districtId).append("<option> Choose District </option>");

                var cityId = $("#CityList" + " option:selected").val;
                console.log("cityId :" + cityId);
                $.ajax({
                    type: "POST",
                    url: "/Employee/GetDistrictByCityId",
                    data: { CityId: cityId },
                    success: (data) => {
                        console.log("data :" + data);
                        $.each(data, (index, element) => {
                            $(districtId).append("<option value='" + element.Id + "'>" + element.Name + "</option>");
                        });
                    },
                    error: function (error) {
                        console.log("error :" + error);
                        alert(error);
                    }
                });
            });
            //---------------------------------------------------------
        });
    </script>
}