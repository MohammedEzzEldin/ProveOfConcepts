@model POVs.BL.ModelView.EmployeeVM

@{
    ViewData["Title"] = ProjectResources["Delete"];
}
@section BootstrapSelectStyles {
    <!--bootstrap-select-->
    <link href="~/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet">
}
<h2>@ProjectResources["Delete"]</h2>

<h4>@ProjectResources["Delete"] : @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageName" />
            <input type="hidden" asp-for="CvName" />
            @{ await Html.RenderPartialAsync("~/Views/Partials/Employee/DeleteDatails.cshtml"); }

            <div class="form-group">
                <input type="submit" value="@ProjectResources["Delete"]" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-success">@ProjectResources["BacktoList"]</a>
    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">@ProjectResources["Update"]</a>
</center>

