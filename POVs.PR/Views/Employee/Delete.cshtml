@model POVs.BL.ModelView.EmployeeVM

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h4>Delete : @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @{ await Html.RenderPartialAsync("~/Views/Partials/Employee/DeleteDatails.cshtml"); }

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<center>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-success">Back to List</a>
    <a asp-controller="Employee" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Update</a>
</center>

