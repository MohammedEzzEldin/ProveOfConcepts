@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = "Department";
}
<h2>Welcome in Department</h2>


<br />

@*<center>
        <h2>@ViewData["x"]</h2>
        <h2>@ViewBag.y</h2>
        <h2>@TempData["z"]</h2>
    </center>*@

<a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create</a>

<br />

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Details</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>
                <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a>
            </td>
            <td>
                <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
            </td>
            <td>
                <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>