@model IEnumerable<DepartmentVM>
@{
    ViewData["Title"] = ProjectResources["Department"];
}
<h2>@ProjectResources["WelcomeInDepartment"]</h2>


<br />

@*<center>
        <h2>@ViewData["x"]</h2>
        <h2>@ViewBag.y</h2>
        <h2>@TempData["z"]</h2>
    </center>*@

<a class="btn btn-primary" asp-controller="Department" asp-action="Create">@ProjectResources["Create"]Create</a>

<br />

<table class="table table-hover table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">@ProjectResources["Hash"]</th>
            <th scope="col">@ProjectResources["Name"]</th>
            <th scope="col">@ProjectResources["Code"]</th>
            <th scope="col">@ProjectResources["Details"]</th>
            <th scope="col">@ProjectResources["Update"]</th>
            <th scope="col">@ProjectResources["Delete"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Name</td>
            <td>@item.Code</td>
            <td>
                <a asp-controller="Department" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">@ProjectResources["Delete"]</a>
            </td>
            <td>
                <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">@ProjectResources["Update"]</a>
            </td>
            <td>
                <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">@ProjectResources["Delete"]</a>
            </td>
        </tr>
        }
    </tbody>
</table>