@model POVs.BL.ModelView.DepartmentVM

@{
    ViewData["Title"] = ProjectResources["Update"];
}

<h2>@ProjectResources["Update"]</h2>

<h4>@ProjectResources["Update"] : @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label">@ProjectResources["Name"]</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ProjectResources["Update"]" class="btn btn-default" />
                <input type="reset" value="@ProjectResources["Cancel"]" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

<center>
    <a asp-controller="Department" asp-action="Index" class="btn btn-success">@ProjectResources["BacktoList"]</a>
    <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">@ProjectResources["Delete"]</a>
</center>

@section JqueryValidation{
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <script src="~/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
