@model DepartmentVM

@{
    ViewData["Title"] = ProjectResources["Details"];
}


<div class="block-header">
    <h2>@ProjectResources["Details"]</h2>
</div>
<div>
    <h4>@ProjectResources["Department"]</h4>
    <hr />
    <label for="Name">@ProjectResources["Name"]</label>
    <input type="text" asp-for="Name" class="form-control" readonly/>
    <br />

    <label for="Code">@ProjectResources["Code"]</label>
    <input type="text" asp-for="Code" class="form-control" readonly/>
    <br />
</div>

<center>
    <a asp-controller="Department" asp-action="Index" class="btn btn-success">@ProjectResources["BacktoList"]</a>
    
    <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">@ProjectResources["Update"]</a>
   
    <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">@ProjectResources["Delete"]</a>
    
</center>
