@model DepartmentVM

@{
    ViewData["Title"] = "Details";
}


<div class="block-header">
    <h2>Details</h2>
</div>
<div>
    <h4>Department</h4>
    <hr />
    <label for="Name">Department Name</label>
    <input type="text" asp-for="Name" class="form-control" readonly/>
    <br />

    <label for="Code">Department Code</label>
    <input type="text" asp-for="Code" class="form-control" readonly/>
    <br />
</div>

<center>
        <a asp-controller="Department" asp-action="Index" class="btn btn-success">Back to List</a>
    
        <a asp-controller="Department" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-primary">Update</a>
   
        <a asp-controller="Department" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    
</center>
